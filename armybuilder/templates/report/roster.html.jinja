{% extends "report/base.html.jinja" %}
{% block content %}
<div class="roster-container">
<div class="kill-team-bio-container">
    <div class="bio-field-container">
        <div class="bio-label player-name">
            Player Name
        </div>
        <div class="bio-entry player-name">
            {{ roster.player_name }}
        </div>
    </div>
    <div class="bio-field-container">
        <div class="bio-label kill-team-name">
            Kill Team Name
        </div>
        <div class="bio-entry kill-team-name">
            {{ roster.name }}
        </div>
    </div>
    <div class="bio-field-container">
        <div class="bio-label faction-name">
            Faction
        </div>
        <div class="bio-entry faction-name">
            {% for faction in roster.factions %}
                {% if faction.is_subfaction == false %}
                    {{ faction.name }}
                {% endif %}
            {% endfor %}
        </div>
    </div>
    <div class="bio-field-container">
        <div class="bio-label sub-faction-name">
            Subfaction
        </div>
        <div class="bio-entry sub-faction-name">
            {% for faction in roster.factions %}
                {% if faction.is_subfaction %}
                    {{ faction.name }}
                {% endif %}
            {% endfor %}
        </div>
    </div>
    <div class="bio-field-container">
        <div class="bio-label points-name">
            Points
        </div>
        <div class="bio-entry points-name">
            {{ roster.points }}
        </div>
    </div>
</div>

<table class="roster-table">
    {{ macros.roster_table_heading() }}
    {% for roster_entry in roster.entries %}
        {{ macros.roster_row(roster_entry) }}
    {% endfor %}

</table>
</div>
{% endblock %}