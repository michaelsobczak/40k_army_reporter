{% extends "web/base.html.jinja" %}
{% block content %}
<div class="container">
    <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
        <div class="col-md-6 px-0">
            <h1 class="display-4 font-italic">Roster</h1>
            <p class="lead my-3">List of Rosters</p>
            <p>Rosters</p>
            <ul class="list-group">
                {% for r in rosters %}
                <li>
                    <a href="/roster/{{ r.id }}">{{ r.name }}</a>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

{% endblock %}